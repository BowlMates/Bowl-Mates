{
  "containers": {
    "frontend": {
      "image": "docker.io/library/frontend:release",
      "environment": {
        "APP_ENV": "release",
        "NODE_ENV": "production"
      },
      "ports": {
        "3000": "HTTP"
      }
    },
    "backend": {
      "image": "docker.io/library/backend:release",
      "environment": {
        "APP_ENV": "release",
        "NODE_ENV": "production"
      },
      "ports": {
        "8080": "HTTP"
      }
    }
  },
  "publicEndpoint": {
    "containerName": "frontend",
    "containerPort": 3000,
    "healthCheck": {
      "healthyThreshold": 2,
      "unhealthyThreshold": 2,
      "timeoutSeconds": 5,
      "intervalSeconds": 10,
      "path": "/",
      "successCodes": "200-499"
    },
    "publicEndpoint": {
      "containerName": "backend",
      "containerPort": 8080,
      "healthCheck": {
        "healthyThreshold": 2,
        "unhealthyThreshold": 2,
        "timeoutSeconds": 5,
        "intervalSeconds": 10,
        "path": "/",
        "successCodes": "200-499"
      }
  }
}
