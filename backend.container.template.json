{
  "containers": {
    "backend": {
      "image": "docker.io/library/bowlmates-container-service:release",
      "environment": {
        "APP_ENV": "release",
        "NODE_ENV": "production"
      },
      "ports": {
        "3000": "HTTP"
      }
    }
  },
  "publicEndpoint": {
    "containerName": "backend",
    "containerPort": 3000,
    "healthCheck": {
      "healthyThreshold": 10,
      "unhealthyThreshold": 10,
      "timeoutSeconds": 60,
      "intervalSeconds": 300,
      "path": "/",
      "successCodes": "200-499"
    }
  }
}
